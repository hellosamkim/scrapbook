<section class="contact-create">
  <h2><%= @contact.first_name %> <%= @contact.last_name %></h2>

  <table class="table" style="width:340px">
    <tr>
      <td>Phone Number: </td>
      <td class="td-right"><%= @contact.phone_number %></td>
    </tr>
    <tr>
      <td>E-Mail: </td>
      <td class="td-right"><%= @contact.email %></td>
    </tr>
    <tr>
      <td>Twitter: </td>
      <td class="td-right"><a href="http://www.twitter.com/<%= @contact.social_media.slice(1..-1) %>" class="social-link"><%= @contact.social_media %></a></td>
    </tr>
  </table>

  <a href="/<%= @contact.id %>/edit">Edit</a>
</section>